<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dad"
    style="@style/CardProjectStyle"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView" />

    <TextView
        android:id="@+id/title_project_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projeto de Controle
PDVâ€™s"
        android:textColor="@color/PRIMARY_GREEN"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_title_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Close Work, 13/08/2023"
        android:textColor="#262626"
        android:textSize="16dp"
        android:textStyle="bold" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/AppButtonStyle"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="Jenkins"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/AppButtonStyle"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="Jenkins"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/describe_porcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:textColor="#262626"
        android:textSize="16dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/AppButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:text="Detalhes"
            android:textSize="18dp" />

    </RelativeLayout>

</LinearLayout>