<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="itemTextColor">@color/bottom_nav_text_selector</item>
        <item name="itemIconTint">@color/bottom_nav_icon_selector</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:background">@drawable/bg_button_notify</item>
    </style>

    <style name="CardProjectStyle">
        <item name="android:background">@drawable/bg_card_projects</item>
        <item name="android:elevation">6sp</item>
    </style>

    <style name="CardProjectHome">
        <item name="android:background">@drawable/bg_card_project_home</item>
        <item name="android:elevation">6sp</item>
    </style>

    <style name="AppChipStyle" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:backgroundTint">@drawable/bg_button_app</item>
    </style>

    <style name="SearchBar">
        <item name="android:background">@drawable/bg_search_bar</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/BLACK</item>
        <item name="colorControlActivated">@color/yellowstar</item>
    </style>

    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="backgroundColor">@color/PRIMARY_GREEN</item>
    </style>

    <style name="avalia_es">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#20AC69</item>
    </style>

    <style name="avaliar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="minhas_aval">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#20AC69</item>
    </style>

</resources>