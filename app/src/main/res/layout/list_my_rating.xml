<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:id="@+id/ivBackground"
                style="@style/CardProjectHome"
                android:layout_width="match_parent"
                android:layout_height="172.3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLogoEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/logo_small" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity=""
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nome_empresa2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OpenWork"
                                android:textColor="@color/BLACK"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tv_stars2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="5"
                                android:textColor="@color/yellowstar"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/ivStar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_star" />

                            <TextView
                                android:id="@+id/tv_data2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:text="01/09/2023"
                                android:textColor="@color/BLACK"
                                android:textSize="12sp" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_description2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/textcompaniedescription"
                            android:textColor="@color/BLACK"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/rb_starts2"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="10dp"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:paddingTop="15dp"
                                android:rating="0"
                                android:stepSize="1"
                                android:theme="@style/RatingBar" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_avaliar"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="60dp"
                                android:layout_marginLeft="40dp"
                                android:backgroundTint="@color/PRIMARY_GREEN"
                                android:text="Avaliar"
                                android:textColor="@color/WHITE"
                                android:textSize="12sp"
                                android:theme="@style/Button.Green" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
